
<div class="container">

<div class="row" style="margin-bottom:5%;margin-left: 10%">
    <div class="col-xs-10 col-sm-6 col-md-4 col-sm-offset-2 col-md-offset-3">
    <%= form_tag "inscription", method: :post do %>
      <fieldset>
        <h2>Vos informations personnelles :</h2>
        <hr class="colorgraph">
        <div class="form-group">
    <label class="control-label col-sm-2" for="statut">Vous êtes:</label>
        </div>
        <div class="form-group">
        <label class="radio-inline"><input type="radio" name="statut" value="Particulier">Particulier</label>
    <label class="radio-inline"><input type="radio" name="statut" value="Professionnel">Professionnel</label>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6" for="name">Nom :</label>
        </div>

        <div class="form-group">
<input type="text"  name="name" placeholder=" Votre nom" class="form-control input-lg"/>        </div>


        <div class="form-group">
          <label class="control-label col-sm-6" for="tel">Téléphone :</label>
        </div>
        <div class="form-group">
<input type="text" name="tel" placeholder=" 06 XX XX XX XX" class="form-control input-lg" />        </div>

        <div class="form-group">
          <label class="control-label col-sm-6" for="ville">Ville :</label>
        </div>
        
        <div class="form-group">
<select id="inputState" class="form-control">
            <option  selected>Casablanca</option>
            <option>...</option>
            </select>        </div>

            <div class="form-group">
          <label class="control-label col-sm-6" for="email">E-mail :</label>
        </div>

        <div class="form-group">
      <input type="text" name="email" placeholder=" nom@domaine.com"  class="form-control input-lg"/>
      </div>

        <div class="form-group">
          <label class="control-label col-sm-6" for="password">Mot de passe :</label>
        </div>

        <div class="form-group">
<input type="password" name="password" placeholder="Choisissez un mot de passe" class="form-control input-lg"/>
      </div>

      </fieldset>
<% end %>
  </div>
</div>
</div>