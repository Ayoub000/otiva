<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<% if session[:util_id] %>
	<%= render "pages/nav2" %>
	<h2>Vous êtes déjà authentifié !</h2>
	<span class="button-checkbox">
		<%= link_to 'Retour à l\'acceuil', root_path, class: "btn btn-link pull-right" %>
	</span>
<% else %>
	<%= render "pages/nav" %>
<div class="container">

<div class="row" style="margin-bottom:5%;margin-left: 20%;">
    <div class="col-xs-10 col-sm-6 col-md-4 col-sm-offset-2 col-md-offset-3">
			<%= form_tag "login", method: :post do %>
			<fieldset>
				<h2>Connexion</h2>
				<hr class="colorgraph">
				<div class="form-group">
                    <input type="text" name="name" id="name" class="form-control input-lg" placeholder="Nom d'utilisateur">
				</div>
				<div class="form-group">
                    <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Mot de passe">
				</div>
				<hr class="colorgraph">
				<div class="row">
                        <input style="background-color: #FE980F;" type="submit" class="btn btn-lg btn-success btn-block" value="Se connecter">	
				</div> <br/>
                Vous n'êtes pas encore inscrits ? <%= link_to 'Inscrivez-vous', inscription_path %>
					
			</fieldset>
			
	</div>
</div>
</div>
<% end %>
<% end %>
